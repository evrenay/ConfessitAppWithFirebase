<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/toolbar_backgroud"
    android:layout_gravity="center_horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/confess_header"
        >
        <ImageButton
            android:id="@+id/left_arrow_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_marginLeft="@dimen/confess_header"
            android:background="@color/toolbar_backgroud"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/img_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="@dimen/choose_image"
        android:background="@color/toolbar_backgroud"
        app:srcCompat="@drawable/image_choose"
        />
    <Button
        android:id="@+id/btn_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/choose_image"
        android:text="@string/upload"
        android:textColor="@android:color/white"
        android:background="@drawable/choose_image"
        android:textStyle="bold"
        />

</LinearLayout>